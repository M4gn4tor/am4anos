html, body
  height: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

body
  font-size: 62.5%
  background: #333
  font-family: $font-title
  
.header
  position: absolute
  top: 3em
  bottom: @top
  right: @top
  left: @top
  background: url('../img/bg-03.jpg') no-repeat top center
  background-size: cover
  box-shadow: 0 0 10px #222
  overflow: hidden
  border-radius: .3em
  z-index: 1
  
  @media $phone
    top: 1em
    bottom: @top
    right: @top
    left: @top

  &:before
    content: ''
    width: 15em
    height: @width
    border-radius: 50%
    background: $color-secondary
    position: absolute
    top: -(@width / 2)
    left: -(@width / 2)
    z-index: -1
    
  &:after
    content: '#4'
    font-size: 2.8em
    color: $color-third
    display: inline-block
    position: absolute
    top: .4em
    left: @top
    z-index: 1

.header-wrapper
  position: relative
  display: flex
  width: 100%
  height: 100%
  z-index: 10
  max-width: 1000px
  padding: 0 3em
  margin: 0 auto
  
.header-content
  margin: auto

.header-logo
  width: 17em
  height: @width
  border-radius: 50%
  background: url('../svg/logo.svg') no-repeat center center rgba(#000, .05)
  background-size: 100%
  text-indent: -9999em
  position: absolute
  top: 50%
  right: 0
  margin-top: -(@height / 2)
  
  @media $phone
    position: static
    margin: 0 auto
    width: 36vh
    height: @width

.header-featured
  width: 60%
  
  @media $phone
    width: 100%
    text-align: center
    
.header-featured__divisor
  width: 80px
  height: 6px
  margin: 4em .3em
  border-radius: 20em
  background: #fff
  
  @media $phone
    margin: 3em auto

.header-featured__title
  font-family: $font-title
  font-size: 5em
  font-weight: normal
  color: #fff
  margin: 0
  
  @media $phone
    display: none
  
.header-featured__location
  margin: .5em 0 0 0
  font-size: 2em
  color: $color-secondary
  
  .bull
    color: #fff
    
  @media $phone
    .date, .location
      display: block
      
    .bull
      display: none
  
.header-button-cta
  @extends $button
  color: $color-third
  font-size: 2em
  position: relative
  text-align: center
  background: #dade70
  margin-top: 0
  transition: background .5s ease
  
  &:hover
    background: $color-primary
